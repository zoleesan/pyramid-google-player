<!DOCTYPE html>
<html lang="en">
  <head>

    <!-- Basic Page Needs
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">

    <title>${name}</title>


    <!-- Mobile Specific Metas
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- FONT
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <!-- <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css"> -->

    <!-- CSS
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link rel="stylesheet" href="${request.static_url('google_player:static/css/normalize.css')}">
    <link rel="stylesheet" href="${request.static_url('google_player:static/css/skeleton.css')}">
    <link rel="stylesheet" href="${request.static_url('google_player:static/css/fontello.css')}">
    <link rel="stylesheet" href="${request.static_url('google_player:static/css/style.css')}">

    <!-- Favicon
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <!-- <link rel="icon" type="image/png" href="images/favicon.png"> -->

    <!-- Other
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

  </head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">
    <div class="row">
      <div class="column header" style="margin-top: 25px">
        <h4>${name}</h4>
        <button class="button-primary" onclick="window.location = 'http://${req_host}/?sync=true'">Sync</button>
      </div>
    </div>
    <div class="row" tal:repeat="song song_list">
      <span class="song-name">${song.name}</span>
      <span class="render-audio" data-songurl="${song.url}">
        <i class="icon-play"></i>
      </span>
      <div class="audio-player empty">
      </div>
    </div>
  </div>

  <!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

  <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="${request.static_url('google_player:static/js/scripts.js')}"></script>
</body>
</html>
